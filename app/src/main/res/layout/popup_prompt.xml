<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dm_20dp"
    android:layout_marginRight="@dimen/dm_20dp"
    android:background="@color/white"
    android:gravity="center"
    android:minWidth="2000dp"
    android:orientation="vertical"
    android:padding="@dimen/dm_20dp">

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/txt_black_33"
        android:textSize="@dimen/txt_18sp" />

    <TextView
        android:id="@+id/txtOk"
        android:layout_width="@dimen/dm_100dp"
        android:layout_height="@dimen/dm_40dp"
        android:layout_marginTop="@dimen/dm_20dp"
        android:background="@drawable/btn_red_corner_circle"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_18sp" />
</LinearLayout>